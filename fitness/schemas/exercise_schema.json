{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["name", "exercise_name", "1rm", "date_created"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Human-readable name of the exercise (e.g., 'Barbell Squat')"
    },
    "exercise_name": {
      "type": "string",
      "description": "Slugified name used for filename (e.g., 'barbell_squat')"
    },
    "1rm": {
      "type": "object",
      "required": ["lb"],
      "properties": {
        "lb": {
          "type": "number"
        }
      }
    },
    "date_created": {
      "type": "string",
      "description": "Datetime in format YYYY-MM-DD-<unix epoch seconds>"
    }
  }
}

